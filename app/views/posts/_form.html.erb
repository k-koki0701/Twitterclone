<%= form_with(model: @post, local: true, url: confirm_posts_path )) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ol>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ol>
    </div>
  <% end %>
  <div class="blog_content">
    <%= form.label :ツイート内容 %><br>
    <%= form.text_area :content ,placeholder: "いまどうしてる？",size: "28x5" %>
  </div>
  <%= form.submit :ツイートする %>
<% end %>
<%= link_to "ツイート一覧にもどる", posts_path %>
