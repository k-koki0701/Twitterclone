<h1>ツイート一覧</h1>
<p><%= notice %></p>
<div>
<table>
<% @posts.each do |post| %>
  <tr>
    <th>内容</th>
  </tr>
  <tr>
    <td><%= post.content %></td>
  </tr>
  <tr>
    <td><%= link_to '詳細', post_path(post.id) %>
    <%= link_to '編集', edit_post_path(post.id) %>
    <%= link_to '削除', post_path(post.id), method: :delete, data: { confirm: '本当に編集していいですか？' } %>
    </td>
  </tr>
<% end %>
</table>
</div>
<%= link_to 'ツイートする',new_post_path %>
